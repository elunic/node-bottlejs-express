# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 100
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
